<?xml version="1.0"?>
<robot name="paddle" xmlns:drake="http://drake.mit.edu">
  <link name="paddle_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="{{ paddle_mass }}"/>
      <inertia ixx="0.0007664583333333" ixy="0" ixz="0" iyy="0.0007664583333333" iyz="0" izz="0.00153125"/>
    </inertial>

    <visual name="paddle_visual">
      <origin xyz="-0.1 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.01"/>
      </geometry>
      <material name="paddle_orange">
        <color rgba="1 0.423529 0.039216 1"/>
      </material>
    </visual>

    <visual name="handle_visual">
      <origin xyz="-0.19 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <box size="0.009 0.035 0.15"/>
      </geometry>
      <material name="handle_gray">
        <color rgba="0.4 0.4 0.4 1"/>
      </material>
    </visual>

    <collision name="paddle_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.175" length="0.01"/>
      </geometry>
      <drake:proximity_properties>
        <drake:hunt_crossley_dissipation value="0.05"/>
        <drake:mu_static value="{{ paddle_friction }}"/>
        <drake:mu_dynamic value="{{ paddle_friction }}"/>
        <drake:restitution value="{{ paddle_restitution }}"/>
      </drake:proximity_properties>
    </collision>

    <collision name="handle_collision">
      <origin xyz="-0.19 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <box size="0.009 0.075 0.05"/>
      </geometry>
    </collision>
  </link>
</robot>